# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=galinfodb_db
DB_PORT=3306

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Application Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Media Storage Configuration
# External path for storing uploaded media files (photos and videos)
# Leave empty to use the default public/media directory inside the project
# 
# Windows examples:
#   MEDIA_STORAGE_PATH=C:/media/galinfo
#   MEDIA_STORAGE_PATH=D:/uploads/galinfo
# 
# Linux/Mac examples:
#   MEDIA_STORAGE_PATH=/var/www/media/galinfo
#   MEDIA_STORAGE_PATH=/home/user/uploads/galinfo
#
MEDIA_STORAGE_PATH=

# Public URL for accessing uploaded media
# This should match your web server configuration for serving the media files
# Default is '/media' which works with the default setup
NEXT_PUBLIC_MEDIA_URL=/media

# Preview Token Secret
# Secret key for generating preview tokens for unpublished articles
# Change this to a random string in production
PREVIEW_TOKEN_SECRET=your_random_secret_key_here_change_in_production